.post-data
  flex-grow 1
.post-date
  color color-grey
  font-size: .8em
  margin-bottom: 2em
.post-header
  h1
    margin-bottom: 10px
.post-image
  background-color #dedede
  // border 1px solid #000
  flex-shrink 0
  margin-right 20px
  transition-duration: .3s
  width: 80px
  height 80px
  overflow hidden
  @media (min-width breakpoint-desktop)
    margin-bottom 10px
    width: 250px
    height 250px
  img
    display: block
    object-fit cover
    width 100%
    height 100%
.post-item
  margin-bottom: 20px
  transition-duration: .3s
  width 100%
  @media (min-width breakpoint-desktop)
    margin-right: 30px
    width 250px
  &:hover
    transform scale(1.05)
    .post-image
      box-shadow shadow //0 1px 10px 5px rgba(0,0,0,0.1)
.post-link
  display: flex
  @media (min-width breakpoint-desktop)
    display block
.post-list
  display: flex
  flex-wrap wrap
.post-title
  color #000
  display block
  @media (min-width breakpoint-tablet)
    margin-bottom 10px
  @media (min-width: breakpoint-ipad-landscape)
    // font-size calc(30 / 16 * 1rem)
